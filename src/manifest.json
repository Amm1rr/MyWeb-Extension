{
  "manifest_version": 2,
  "name": "MyWeb",
  "version": "0.1",
  "description": "My browsing, My Webbing",
  "icons": {
    "48": "assets/icon.png",
    "96": "assets/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "assets/icon.png"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/icon.png",
      "38": "assets/icon.png"
    },
    "default_title": "MyWeb",
    "default_popup": "popup.html"  // Specifies the popup to show
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }
  ]
}
