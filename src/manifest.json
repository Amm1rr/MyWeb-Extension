{
  "manifest_version": 2,
  "name": "MyWeb",
  "version": "0.1",
  "description": "My browsing, My Webbing",
  "homepage_url": "https://github.com/Amm1rr/MyWeb-Extension/",
  "icons": {
    "48": "assets/icon.png",
    "96": "assets/icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [
    "assets/icon.png"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "MyWeb",
    "default_popup": "popup.html",  // Specifies the popup to show
    "default_icon": {
      "19": "assets/icon.png",
      "38": "assets/icon.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html"
}
